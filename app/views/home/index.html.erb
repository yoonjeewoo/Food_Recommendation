<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>아침 점심 저녁 메뉴추천</title>
    <!-- Bootstrap core CSS -->
    <link href="assets/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="assets/stylesheets/custom.css" rel="stylesheet">
    <link href="assets/stylesheets/animate.css" rel="stylesheet">
    <!-- script -->
    <script src="assets/javascripts/jquery-3.2.1.js"></script>
  </head>
  <body>
      <header class="header">
        <div class="container">
          <h1>Menu Recommendation</h1>
          <h2>Calories for a Day : <span class="flash animated"><%=  @total %></span> / 2400</h2>
        </div>
      </header>
      <script>
        var cal = <%= @total %>
        if (cal <= 2400 && cal >= 2000) {
          $("span").css("color", "#2ecc71");
        }else if(cal < 2000 && cal >= 1600) {
          $("span").css("color", "#f1c40f");
        }else {
          $("span").css("color", "#e74c3c");
        }
      </script>
      <div class="container">
        <section class="foodlist">
          <div class="row">
            <div class="col-md-6">
          <table class="table table-bordered bounceInUp animated">
            <tr>
              <th>Food</th>
              <th>Calories</th>
            </tr>
            <tr>
              <% for i in 0..2 %>
              <td><%= @food[0][i] %></td>
              <td><%= @food[1][i] %></td>
            </tr>
            <% end %>
          </table>
          </div>
          </div>
        </section>
        <hr>
         <section class="breakfast">
            <h2>Breakfast</h2>
            <h3>Calories for Breakfast : <%=@breakfast%></h3>
            <div class="row">
              <% @breakfast_list.each do |food| %>
              <div class="col-sm-6 col-md-4">
                  <div class="thumbnail">
                    <%= image_tag(food + ".jpeg") %>
                    <div class="caption">
                      <h3><%= food %></h3>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </section>
        <hr>
        <section class="lunch">
            <h2>Lunch</h2>
            <h3>Calories for Lunch : <%=@lunch%></h3>
            <div class="row">
              <% @lunch_list.each do |food| %>
              <div class="col-sm-6 col-md-4">
                  <div class="thumbnail">
                    <%= image_tag(food + ".jpeg") %>
                    <div class="caption">
                      <h3><%= food %></h3>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
        </section>
        <hr>
        <section class="dinner">
            <h2>Dinner</h2>
            <h3>Calories for Dinner : <%=@dinner%></h3>
            <div class="row">
              <% @dinner_list.each do |food| %>
              <div class="col-sm-6 col-md-4">
                  <div class="thumbnail">
                    <%= image_tag(food + ".jpeg") %>
                    <div class="caption">
                      <h3><%= food %></h3>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
        </section>
        </div>
  </body>
</html>


